<h1>My Shoppinglist</h1>

<%= form_for Item.new do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "What do you need?" %>
  </div>

  <div class="form-group">
    <%= f.text_field :priority, placeholder: "priority level" %>
  </div>

  <div class="form-group">
  <%= f.submit %>
  </div>
<% end %>

<ul>
<% @items.each do |item| %>
  <li id="<%= item.id %>">
    <%= item.name %><br>
    <strong>priority: </strong><%= item.priority %><br>
    <%= link_to "done", item_path(item), method: 'delete', remote: true %>
  </li>
<% end %>
</ul>
